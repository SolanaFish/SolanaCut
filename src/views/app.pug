extends layout.pug

block append head
    script(src='http://localhost:9699/mainpage.js')
    style.
        .strip {
            display:flex;
            flex-direction: row;
            border-style: solid;
            border-width: 2px;
        }
        .element {
            flex:auto;
            border-style: solid;
            border-width: 2px;
        }

block body
    ='k'
    canvas#test(width='1100', height='1100')
    each board in test.boardsOptimized
        div
            each strip in board.strips
                div.strip
                    each element in strip.elements
                        div.element= `h:${element.height} w:${element.width}`
